<% if obj.errors.any? %>
<div class="card text-white bg-danger mb-3 col-sm-8 offset-sm-2">
  <div class="card-body">
      <h5 class="card-title">
        <%= pluralize(obj.errors.count, "error") %>
        prohibited this article from being saved:
      </h5>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
</div>
<% end %>