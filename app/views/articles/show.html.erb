<h2 align="center">Title: <%= @article.title %></h2>

<div class="card bg-light">
  <div class="card-header text-center">
    <strong>Description</strong>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(@article.description) %></p>
    <%= link_to("Edit this article", edit_article_path(@article), class: "btn btn-sm btn-primary") %>
    <%= link_to("Delete this article", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this?"}, class: "btn btn-sm btn-danger") %>
    <%= link_to("View all article", articles_path, class: "btn btn-sm btn-success") %>
  </div>
</div>