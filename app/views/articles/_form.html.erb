<%= render(:partial => 'shared/errors', :locals => {obj: @article})%>

  <div class="col-sm-12">
      <%= form_for @article do |f| %>
          <div class="form-group row">
            <div class="col-sm-2 col-form-label">
              <%= f.label :title %>
            </div>
            <div class="col-sm-8">
              <%= f.text_field :title, class: "form-control", placeholder: "Title for the article", autofocus: true%>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-2 col-form-label">
              <%= f.label :description %>
            </div>
            <div class="col-sm-8">
              <%= f.text_area :description, rows: 10, cols: 30, class: "form-control", placeholder: "Body of the title" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
              <%= f.submit class: "btn btn-primary btn-lg" %>
            </div>
          </div>
      <% end %>
      <div class="col-sm-8 offset-sm-6">
        <%= link_to("Show all articles", articles_path)%>
      </div>
</div>